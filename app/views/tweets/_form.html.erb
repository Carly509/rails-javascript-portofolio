<%= form_for(@tweet) do |f| %>
  <%= render 'shared/error_messages', object: @tweet %>
<div class="field">
  <div class="control">
    <%= f.text_field :tweet, label: "Tweet about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweet...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>